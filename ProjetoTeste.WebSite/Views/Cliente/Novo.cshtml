@model ProjetoTeste.NH.Model.Cliente

@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_LayoutSistema.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Principal", "Home")"> Painel de Indicadores</a>
        </li>
        <li>
            <i class="fa fa-users"></i> <a href="@Url.Action("Index", "Cliente")"> Clientes</a>
        </li>
        <li class="active">
            <i class="fa fa-plus"></i> Adicionar Cliente
        </li>
    </ol>
</div>

@using (Html.BeginForm("Gravar","Cliente", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal panel panel-green">
    <div class="panel-heading">
        Lista de Clientes
    </div>
    <div class="panel-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Index", "Cliente")" class="btn btn-info" title="Voltar"><i class="fa fa-arrow-left"></i></a>
                <button type="submit" value="Create" class="btn btn-success" title="Salvar" ><i class="fa fa-floppy-o"></i></button>
                
            </div>
        </div>
                
            
    </div>


   

</div>
}